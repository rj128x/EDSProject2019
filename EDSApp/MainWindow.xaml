<Window x:Class="EDSApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EDSApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="100" Width="300">
    <Grid>
        <Border>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button x:Name="button" Content="Отчет" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
                <Button x:Name="buttonWater" Content="Вода" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="buttonWater_Click"/>
                <Button x:Name="buttonAVRCHM" Content="АВРЧМ" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="buttonAVRCHM_Click"/>
                
            </StackPanel>
        </Border>


    </Grid>
</Window>
